<div class="page-header">
  <h1>
    Resources
    <a href="/resources/new" class="btn btn-lg btn-success">New Resource</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Lesson</th>
        <th>Description</th>
        <th>Embed address</th>
        <th>Actions</th>
      </tr>

      <% @resources.each do |resource| %>
      <tr>
        <td><%= resource.lesson.lesson_name %></td>
        <td><%= resource.description %></td>
        <td><%= truncate(resource.embed_address) %></td>
        <td>
          <a href="/resources/<%= resource.id %>" class="btn btn-primary">Show</a>
          <a href="/resources/<%= resource.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_resource/<%= resource.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
