<div class="page-header">
  <h3>Suggestion #<%= @suggestion.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd><%= @suggestion.user_id %></dd>

      <dt>Lesson</dt>
      <dd><%= @suggestion.lesson_id %></dd>

      <dt>Link to resource</dt>
      <dd><%= @suggestion.link_to_resource %></dd>

      <dt>Reason for submitting</dt>
      <dd><%= @suggestion.reason_for_submitting %></dd>

      <dt>Additional comments</dt>
      <dd><%= @suggestion.additional_comments %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/suggestions" class="btn btn-primary">
        Back
      </a>
      <a href="/suggestions/<%= @suggestion.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_suggestion/<%= @suggestion.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
