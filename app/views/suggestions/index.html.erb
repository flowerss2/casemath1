<div class="page-header">
  <h1>
    Suggestions
    <a href="/suggestions/new" class="btn btn-lg btn-success">New Suggestion</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Lesson</th>
        <th>Link to resource</th>
        <th>Reason for submitting</th>
        <th>Additional comments</th>
        <th>Actions</th>
      </tr>

      <% @suggestions.each do |suggestion| %>
      <tr>
        <td><%= suggestion.user_id %></td>
        <td><%= suggestion.lesson_id %></td>
        <td><%= suggestion.link_to_resource %></td>
        <td><%= suggestion.reason_for_submitting %></td>
        <td><%= suggestion.additional_comments %></td>
        <td>
          <a href="/suggestions/<%= suggestion.id %>" class="btn btn-primary">Show</a>
          <a href="/suggestions/<%= suggestion.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_suggestion/<%= suggestion.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
