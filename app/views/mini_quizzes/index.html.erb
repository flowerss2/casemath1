<div class="page-header">
  <h1>
    Mini quizzes
    <a href="/mini_quizzes/new" class="btn btn-lg btn-success">New Mini quiz</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Lesson</th>
        <th>Description</th>
        <th>Location</th>
        <th>Embed address</th>
        <th>Actions</th>
      </tr>

      <% @mini_quizzes.each do |mini_quiz| %>
      <tr>
        <td><%= mini_quiz.lesson.lesson_name %></td>
        <td><%= mini_quiz.description %></td>
        <td><%= mini_quiz.location %></td>
        <td><%= mini_quiz.embed_address %></td>
        <td>
          <a href="/mini_quizzes/<%= mini_quiz.id %>" class="btn btn-primary">Show</a>
          <a href="/mini_quizzes/<%= mini_quiz.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_mini_quiz/<%= mini_quiz.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
