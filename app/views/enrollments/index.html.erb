<div class="page-header">
  <h1>
    Enrollments
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>You attend the following school:</th>
        <th>Actions</th>
      </tr>

      <% @enrollments.each do |enrollment| %>
      <tr>
        <td><% if current_user.id == enrollment.user_id %>
          <%= current_user.enrollment.school.school_name %></td>

        <td>
          <a href="/enrollments/<%= enrollment.id %>" class="btn btn-primary">Show</a>
          <a href="/enrollments/<%= enrollment.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_enrollment/<%= enrollment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
        <% else %>
        <% end %>
      </tr>
      <% end %>
    </table>
  </div>
</div>
