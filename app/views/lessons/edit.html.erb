<!-- Validation failure messages -->
<% if @lesson.errors.any? %>
  <% @lesson.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Lesson #<%= @lesson.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_lesson/<%= @lesson.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for lesson_name -->
      <div class="form-group">
        <label for="lesson_name" class="control-label">
          Lesson name
        </label>

        <input type="text" id="lesson_name" name="lesson_name" placeholder="Lesson name" class="form-control" value="<%= @lesson.lesson_name %>">
      </div>

      <!-- Label and input for video_id -->
      <div class="form-group">
        <label for="video_id" class="control-label">
          Video
        </label>

        <input type="text" id="video_id" name="video_id" placeholder="Video" class="form-control" value="<%= @lesson.video_id %>">
      </div>

      <!-- Label and input for resources_id -->
      <div class="form-group">
        <label for="resources_id" class="control-label">
          Resources
        </label>

        <input type="text" id="resources_id" name="resources_id" placeholder="Resources" class="form-control" value="<%= @lesson.resources_id %>">
      </div>

      <button class="btn btn-warning">
        Update Lesson
      </button>
      or
      <a href="/lessons/<%= @lesson.id %>">Cancel</a>
    </form>
  </div>
</div>
